# Production Environment Configuration
# Construction Master App - Production Settings

# Application
NODE_ENV=production
PORT=3016
CLIENT_PORT=3227

# Database
MONGODB_URI=mongodb://mongodb:27017/probuilder
MONGODB_TEST_URI=mongodb://mongodb:27017/probuilder-test

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=production-secret-key-must-be-secure
JWT_REFRESH_SECRET=production-refresh-secret-must-be-secure
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=ProBuilder <noreply@probuilder.app>

# File Upload (Production)
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# AWS Configuration (Production)
AWS_ACCESS_KEY_ID=production-access-key
AWS_SECRET_ACCESS_KEY=production-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=probuilder-production-uploads

# AI Configuration (Production)
OPENAI_API_KEY=your-production-openai-api-key
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000

# Monitoring & Analytics (Production)
SENTRY_DSN=your-production-sentry-dsn
GOOGLE_ANALYTICS_ID=GA-PRODUCTION-ID
MIXPANEL_TOKEN=production-mixpanel-token

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Security (Production)
BCRYPT_ROUNDS=12
SESSION_SECRET=production-session-secret-must-be-secure
CORS_ORIGIN=https://probuilder.app

# Backup Configuration (Production)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_S3_BUCKET=probuilder-production-backups

# Notification Configuration (Production)
PUSH_NOTIFICATION_PUBLIC_KEY=production-public-key
PUSH_NOTIFICATION_PRIVATE_KEY=production-private-key

# Production Features
DEBUG=
LOG_LEVEL=warn
ENABLE_SWAGGER=false

# Performance (Production)
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Mobile App (Production)
EXPO_PUBLIC_API_URL=https://api.probuilder.app
EXPO_PUBLIC_WS_URL=wss://api.probuilder.app

# Client Configuration
NEXT_PUBLIC_API_URL=https://api.probuilder.app
NEXT_PUBLIC_WS_URL=wss://api.probuilder.app
NEXT_PUBLIC_ENVIRONMENT=production

