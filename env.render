# Render Environment Configuration
# Copy this file to your Render dashboard environment variables

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=10000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb+srv://demo:demo@cluster0.mongodb.net/archtrack?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# API Configuration
API_BASE_URL=https://your-backend-service.onrender.com
WS_BASE_URL=wss://your-backend-service.onrender.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://your-backend-service.onrender.com
NEXT_PUBLIC_WS_URL=wss://your-backend-service.onrender.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Email Configuration (if using email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here

# Security
CORS_ORIGIN=https://your-frontend-service.onrender.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_3D_VIEWER=true
ENABLE_AR_FEATURES=true
ENABLE_COLLABORATION=true

# Performance
CACHE_TTL=3600
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
