{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["ES2020", "DOM"],
    "paths": {
      "@client/*": ["apps/client/src/*"],
      "@server/*": ["apps/server/src/*"],
      "@scripts/*": ["scripts/*"],
      "@shared/*": ["packages/shared/src/*"]
    }
  }
}
