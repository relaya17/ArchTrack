# Staging Environment Configuration
# Construction Master App - Staging Settings

# Application
NODE_ENV=staging
PORT=3016
CLIENT_PORT=3227

# Database
MONGODB_URI=mongodb://mongodb:27017/probuilder-staging
MONGODB_TEST_URI=mongodb://mongodb:27017/probuilder-test

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=staging-secret-key-change-in-production
JWT_REFRESH_SECRET=staging-refresh-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Staging)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=staging-user
SMTP_PASS=staging-password
SMTP_FROM=ProBuilder Staging <staging@probuilder.app>

# File Upload (Staging)
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads-staging
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# AWS Configuration (Staging)
AWS_ACCESS_KEY_ID=staging-access-key
AWS_SECRET_ACCESS_KEY=staging-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=probuilder-staging-uploads

# AI Configuration (Staging)
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# Monitoring & Analytics (Staging)
SENTRY_DSN=your-staging-sentry-dsn
GOOGLE_ANALYTICS_ID=GA-STAGING-ID
MIXPANEL_TOKEN=staging-mixpanel-token

# Rate Limiting (Staging)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_AUTH_MAX_REQUESTS=20

# Security (Staging)
BCRYPT_ROUNDS=12
SESSION_SECRET=staging-session-secret
CORS_ORIGIN=https://staging.probuilder.app

# Backup Configuration (Staging)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=probuilder-staging-backups

# Notification Configuration (Staging)
PUSH_NOTIFICATION_PUBLIC_KEY=staging-public-key
PUSH_NOTIFICATION_PRIVATE_KEY=staging-private-key

# Staging Features
DEBUG=probuilder:error
LOG_LEVEL=info
ENABLE_SWAGGER=true

# Performance (Staging)
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=1800

# Mobile App (Staging)
EXPO_PUBLIC_API_URL=https://staging-api.probuilder.app
EXPO_PUBLIC_WS_URL=wss://staging-api.probuilder.app

# Client Configuration
NEXT_PUBLIC_API_URL=https://staging-api.probuilder.app
NEXT_PUBLIC_WS_URL=wss://staging-api.probuilder.app
NEXT_PUBLIC_ENVIRONMENT=staging

