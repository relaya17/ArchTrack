{
  "name": "archtrack-server",
  "version": "1.0.0",
  "description": "ArchTrack Server - Full Stack Application",
  "main": "dist/server.js",
  "scripts": {
    "postinstall": "cd apps/server && npm install && cd ../client && npm install",
    "build": "cd apps/server && npm run build && cd ../client && npm run build",
    "start": "cd apps/server && npm run start",
    "dev": "cd apps/server && npm run dev",
    "dev:client": "cd apps/client && npm run dev",
    "dev:server": "cd apps/server && npm run dev",
    "install:all": "cd apps/server && npm install && cd ../client && npm install",
    "build:server": "cd apps/server && npm run build",
    "build:client": "cd apps/client && npm run build"
  },
  "dependencies": {
    "express": "^5.1.0",
    "mongoose": "^7.3.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}