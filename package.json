{
    "name": "construction-excel-pro",
    "version": "1.0.0",
    "private": true,
    "description": "מערכת גיליונות חכמה מקצועית לענף הבנייה והאדריכלות",
    "scripts": {
        "dev": "concurrently \"pnpm --filter client dev\" \"pnpm --filter server dev\"",
        "dev:mobile": "pnpm --filter mobile start",
        "build": "pnpm -r run build",
        "start": "node simple-server.js",
        "start:client": "pnpm --filter client start",
        "start:server": "pnpm --filter server start",
        "start:all": "concurrently \"pnpm --filter server start\" \"pnpm --filter client start\"",
        "lint": "pnpm -r run lint",
        "type-check": "pnpm -r run type-check",
        "test": "pnpm -r run test",
        "client": "pnpm --filter client dev",
        "server": "pnpm --filter server dev",
        "mobile": "pnpm --filter mobile start",
        "install-all": "pnpm install",
        "clean": "rimraf node_modules apps/*/node_modules packages/*/node_modules",
        "analyze": "cross-env ANALYZE=true pnpm --filter client build",
        "perf": "pnpm --filter client build && pnpm --filter client start",
        "lighthouse": "lighthouse http://localhost:3227 --output html --output-path ./lighthouse-report.html",
        "deploy:dev": "scripts/deploy.sh development",
        "deploy:staging": "scripts/deploy.sh staging",
        "deploy:prod": "scripts/deploy.sh production",
        "backup:dev": "scripts/backup.sh development",
        "backup:staging": "scripts/backup.sh staging",
        "backup:prod": "scripts/backup.sh production",
        "health:dev": "scripts/health-check.sh development",
        "health:staging": "scripts/health-check.sh staging",
        "health:prod": "scripts/health-check.sh production",
        "k8s:apply": "kubectl apply -f k8s/",
        "k8s:delete": "kubectl delete -f k8s/",
        "k8s:status": "kubectl get pods -n probuilder",
        "render:deploy": "git push origin main",
        "render:build": "pnpm build",
        "render:start": "pnpm start:server",
        "render:health": "curl -f http://localhost:10000/api/health"
    },
    "dependencies": {
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@types/node": "20",
        "@types/react": "18",
        "@types/react-dom": "18",
        "concurrently": "8.2.2",
        "cross-env": "7.0.3",
        "eslint": "8.56.0",
        "@typescript-eslint/eslint-plugin": "6.21.0",
        "@typescript-eslint/parser": "6.21.0",
        "eslint-config-prettier": "9.1.0",
        "prettier": "3.1.1",
        "rimraf": "5.0.1",
        "typescript": "5.3.3"
    },
    "packageManager": "pnpm@8.15.0",
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    }
}