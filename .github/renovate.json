{
    "extends": [
        "config:base"
    ],
    "schedule": [
        "before 6am on monday"
    ],
    "timezone": "Asia/Jerusalem",
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchCurrentVersion": "!/^0/",
            "automerge": true
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "automerge": true
        }
    ]
}