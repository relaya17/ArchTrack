# Development Environment Configuration
# Construction Master App - Development Settings

# Application
NODE_ENV=development
PORT=3016
CLIENT_PORT=3227

# Database
MONGODB_URI=mongodb://localhost:27017/probuilder-dev
MONGODB_TEST_URI=mongodb://localhost:27017/probuilder-test

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=dev-secret-key-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Development)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=ethereal-user
SMTP_PASS=ethereal-password
SMTP_FROM=ProBuilder Dev <dev@probuilder.local>

# File Upload (Development)
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads-dev
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# AWS Configuration (Development - Local)
AWS_ACCESS_KEY_ID=dev-access-key
AWS_SECRET_ACCESS_KEY=dev-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=probuilder-dev-uploads

# AI Configuration (Development)
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# Monitoring & Analytics (Development)
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Rate Limiting (Development - More Permissive)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_MAX_REQUESTS=50

# Security (Development)
BCRYPT_ROUNDS=10
SESSION_SECRET=dev-session-secret
CORS_ORIGIN=http://localhost:3227

# Backup Configuration (Development)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=probuilder-dev-backups

# Notification Configuration (Development)
PUSH_NOTIFICATION_PUBLIC_KEY=dev-public-key
PUSH_NOTIFICATION_PRIVATE_KEY=dev-private-key

# Development Features
DEBUG=probuilder:*
LOG_LEVEL=debug
ENABLE_SWAGGER=true

# Performance (Development)
ENABLE_COMPRESSION=false
ENABLE_CACHING=false
CACHE_TTL=60

# Mobile App (Development)
EXPO_PUBLIC_API_URL=http://localhost:3016
EXPO_PUBLIC_WS_URL=ws://localhost:3016

# Client Configuration
NEXT_PUBLIC_API_URL=http://localhost:3016
NEXT_PUBLIC_WS_URL=ws://localhost:3016
NEXT_PUBLIC_ENVIRONMENT=development

